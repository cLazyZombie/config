{
  "GitLive.Issue tracker integration": "Disabled",
  "editor.accessibilitySupport": "off",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingQuotes": "never",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.fontFamily": "MesloLGM Nerd Font Mono",
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.mouseWheelZoom": true,
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "info",
    "error"
  ],
  "git.autofetch": true,
  "git.mergeEditor": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": false
  },
  "go.toolsManagement.autoUpdate": true,
  "rust-analyzer.completion.privateEditable.enable": true,
  "rust-analyzer.diagnostics.experimental.enable": true,
  "rust-analyzer.imports.granularity.enforce": true,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
  "rust-analyzer.typing.autoClosingAngleBrackets.enable": true,
  "rust-analyzer.workspace.symbol.search.limit": 256,
  "terminal.integrated.fontSize": 13,
  "vim.argumentObjectClosingDelimiters": [
    ")",
    "]",
    ">"
  ],
  "vim.argumentObjectOpeningDelimiters": [
    "(",
    "[",
    "<"
  ],
  "vim.easymotion": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "m"
      ],
      "commands": [
        "bookmarks.toggle"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "bookmarks.list"
      ]
    },
    {
      "before": [
        "<leader>",
        "n"
      ],
      "commands": [
        "bookmarks.jumpToNext"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "commands": [
        "bookmarks.jumpToPrevious"
      ]
    },
    {
      "before": [
        "<C-h>"
      ],
      "commands": [
        "workbench.action.navigateLeft"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "commands": [
        "workbench.action.navigateRight"
      ]
    },
    {
      "before": [
        "<BS>"
      ],
      "after": [
        "c", "i", "w"
      ]
    },
    {
      "before": ["<leader>", "o"],
      "commands": [
          "workbench.view.explorer", // Explorer 창 열기
          "workbench.files.action.showActiveFileInExplorer" // 현재 파일에 포커스
      ]
    } 
  ],
  "vim.smartRelativeLine": true,
  "vim.statusBarColorControl": true,
  "vim.useSystemClipboard": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "workbench.colorTheme": "One Dark Pro",
  "workbench.editor.decorations.colors": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "vim.targets.smartQuotes.aIncludesSurroundingSpaces": false,
  "editor.minimap.autohide": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "<Del>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "L"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ]
    },
    {
      "before": [
        "H"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "e"
      ],
      "commands": [
        "workbench.explorer.fileView.focus"
      ]
    },
    {
      "before": [
        "u"
      ],
      "commands": [
        "undo"
      ]
    },
    {
      "before": [
        "c-r"
      ],
      "commands": [
        "redo"
      ]
    }
  ],
  "GitLive.Special branches": "main|master|trunk|dev|develop|qa|test|release[-/].*",
  "editor.inlayHints.padding": true,
  "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
  "rust-analyzer.procMacro.attributes.enable": false,
  "rust-analyzer.procMacro.enable": false,
  "rust-analyzer.diagnostics.disabled": [
    "unresolved-import",
    "unresolved-macro-call"
  ],
  "remote.SSH.remotePlatform": {
    "sandbox.bety4o.csb": "linux"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "scm.inputFontFamily": "editor",
  "debug.console.fontFamily": "MesloLGM Nerd Font Mono",
  "editor.codeLensFontFamily": "MesloLGM Nerd Font Mono",
  "errorLens.fontFamily": "MesloLGM NFM",
  "json.format.enable": false
}